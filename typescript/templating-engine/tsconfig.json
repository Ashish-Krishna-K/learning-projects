{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES6",
        "jsx": "preserve",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/hello.tsx"],
    "exclude": ["node_modules"]
}
